{
  "name": "@binance-chain/ledger-bridge",
  "version": "0.1.5",
  "description": "A project for Ledger bridge",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/ledger.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build && yarn build:gh",
    "build:gh": "node scripts/build-gh.js",
    "deploy:gh": "gh-pages -d dist/gh",
    "lint": "tsdx lint src",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prepublish": "yarn build"
  },
  "peerDependencies": {},
  "author": "robot-ux",
  "devDependencies": {
    "@babel/preset-env": "7.13.9",
    "@binance-chain/commitlint-config": "^0.2.1",
    "@binance-chain/prettier-config": "^1.0.1",
    "@commitlint/cli": "^12.1.4",
    "@size-limit/preset-small-lib": "^4.10.2",
    "babel-loader": "8.2.2",
    "gh-pages": "^3.2.3",
    "html-webpack-plugin": "4.3.0",
    "husky": "4.3.8",
    "size-limit": "^4.10.2",
    "ts-loader": "8.0.17",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12"
  },
  "prettier": "@binance-chain/prettier-config",
  "commitlint": {
    "extends": [
      "@binance-chain/commitlint-config"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "size-limit": [
    {
      "path": "dist/ledger.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/ledger.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@binance-chain/javascript-sdk": "^4.1.1",
    "@ledgerhq/hw-app-eth": "^6.0.2",
    "@ledgerhq/hw-transport": "^6.0.2",
    "@ledgerhq/hw-transport-webusb": "^6.0.2",
    "eth-sig-util": "^3.0.1",
    "ethereumjs-tx": "1.3.7",
    "ethereumjs-util": "^7.0.10",
    "fast-sha256": "^1.3.0",
    "hdkey": "^2.0.1"
  }
}
